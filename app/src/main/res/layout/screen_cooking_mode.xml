<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_exit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/left_arrow"
                    app:iconTint="@color/green_primary"
                    app:iconSize="20dp"
                    style="@style/Widget.Material3.Button.IconButton" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cooking Mode"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="4dp" />

                <!-- Voice Control Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_voice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/mic"
                    app:iconTint="@color/green_primary"
                    app:iconSize="20dp"
                    style="@style/Widget.Material3.Button.IconButton" />

            </LinearLayout>

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/text_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 1 of 5"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:progressTint="@color/green_primary"
                    android:progressBackgroundTint="@color/gray_200"
                    android:max="100"
                    android:progress="20" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/bottom_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white">

            <!-- Step Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CURRENT STEP"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/text_step"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bring 1 cup of the broth to a boil. Add spinach and cook until softened but still bright green."
                        android:textSize="18sp"
                        android:textColor="@color/gray_900"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Estimated Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_outline_field"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/orange_600"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/text_step_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated: 5 min"
                            android:textSize="14sp"
                            android:textColor="@color/gray_700"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Timer Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIMER"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/text_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:00"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/text_timer_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Counting down..."
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginBottom="16dp" />

                    <!-- Timer Controls -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/button_pause_timer"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:background="@drawable/bg_outline_button"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:id="@+id/icon_pause_timer"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_pause"
                                app:tint="@color/green_primary" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button_reset_timer"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:background="@drawable/bg_outline_button"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_refresh"
                                app:tint="@color/green_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Voice Indicator Card (Hidden by default) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_voice_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/green_primary"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mic"
                        app:tint="@color/white"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/text_voice_indicator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Listening... Say 'next' or 'previous'"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Bar with Navigation -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/button_prev_step"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_outline_button"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/left_arrow"
                    app:tint="@color/green_primary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_next_step"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_filled_green_button"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>