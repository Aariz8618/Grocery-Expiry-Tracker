<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".DashboardActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hello, Guest "
            android:textSize="24sp"
            android:textColor="#2D3748"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_icon_bg"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Profile" />
    </LinearLayout>

    <!-- Filter Button Section -->
    <HorizontalScrollView
        android:id="@+id/filter_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_section"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="All"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fresh"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Fresh"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expiring"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Expiring"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:layout_marginEnd="8dp"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expired"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Expired"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gray_800"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_used"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Used"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                app:strokeColor="@color/green_primary"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Content Area (RecyclerView + Empty State + Loading) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filter_section"
        android:layout_above="@+id/adView"
        android:background="@color/white">

        <!-- Grocery Items List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_grocery" />

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/loading_indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="#F5F5F5">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorColor="@color/green_primary"
                app:trackColor="@color/gray_200" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading your items..."
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_cart"
                android:alpha="0.3"
                app:tint="#9CA3AF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No items found"
                android:textSize="18sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try adjusting your filter or add new items"
                android:textSize="14sp"
                android:textColor="#9CA3AF"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/adView"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/add"
        app:tint="@android:color/white"
        app:backgroundTint="@color/green_primary"
        app:maxImageSize="30dp" />


    <!-- Ad View (above bottom nav) -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_nav"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6955619859685115/9852547709" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingTop="6dp">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#48BB78" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#48BB78"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Stats Tab -->
        <LinearLayout
            android:id="@+id/tab_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/stats"
                app:tint="#9CA3AF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textSize="12sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Recipes Tab -->
        <LinearLayout
            android:id="@+id/tab_recipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/recipe"
                app:tint="#9CA3AF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textSize="12sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/tab_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                app:tint="#9CA3AF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>