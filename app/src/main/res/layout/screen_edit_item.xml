<?xml version="1.0" encoding="utf-8"?>
<!-- screen_edit_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- Top bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/left_arrow"
                app:iconTint="@color/green_primary"
                app:iconSize="20dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Item"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@+id/bottom_bar"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Barcode Info Section -->
            <LinearLayout
                android:id="@+id/barcode_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_barcode_info"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/barcode_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barcode: 123456789"
                    android:textSize="12sp"
                    android:textColor="@color/gray_700"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <!-- Product Image Section -->
            <ImageView
                android:id="@+id/product_image_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_image_rounded"
                android:visibility="gone" />

            <!-- Item Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name *"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="8dp" />

            <!-- Item Name Input Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_outline_field"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cart"
                    app:tint="@color/gray_600" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Enter item name"
                    android:textColorHint="@color/gray_600"
                    android:textColor="@color/gray_800"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="textCapSentences" />
            </LinearLayout>

            <!-- Category Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category *"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="8dp" />

            <!-- Clickable Category Field -->
            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_outline_field"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/text_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select category"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_down"
                    app:tint="@color/gray_600" />
            </LinearLayout>

            <!-- Purchase Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase Date"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="8dp" />

            <!-- Clickable Purchase Date Field -->
            <LinearLayout
                android:id="@+id/purchase_date_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_outline_field"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/gray_600"/>

                <TextView
                    android:id="@+id/text_purchase_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mm/dd/yyyy"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Expiry Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date *"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="8dp" />

            <!-- Clickable Expiry Date Field -->
            <LinearLayout
                android:id="@+id/expiry_date_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_outline_field"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/gray_600"/>

                <TextView
                    android:id="@+id/text_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mm/dd/yyyy"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Quantity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <!-- Decrement Button -->
                <LinearLayout
                    android:id="@+id/button_decrement"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_outline_button"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Decrement">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_remove"
                        app:tint="@color/green_primary" />
                </LinearLayout>

                <!-- Quantity -->
                <TextView
                    android:id="@+id/input_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_800"
                    android:minWidth="48dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />

                <!-- Increment Button -->
                <LinearLayout
                    android:id="@+id/button_increment"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_outline_button"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Increment">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_plus"
                        app:tint="@color/green_primary" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Save button pinned bottom -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">

        <!-- Update button -->
        <LinearLayout
            android:id="@+id/button_save_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_filled_green_button"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/save_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Item"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_loading_dialog"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminateTint="@color/green_primary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updating item..."
                android:textColor="@color/gray_800"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>