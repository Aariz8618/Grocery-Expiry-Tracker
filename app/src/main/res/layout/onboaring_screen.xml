<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Skip Button -->
    <TextView
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Illustration Container -->
    <FrameLayout
        android:id="@+id/illustration_container"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/text_skip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Background Circle -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_onboarding_circle" />

        <!-- Icon/Illustration -->
        <ImageView
            android:id="@+id/onboarding_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_onboarding_track"
           />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Track Your Groceries"
        android:textColor="#2E7D32"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/illustration_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/onboarding_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Never let your food go to waste. Track expiry dates and get timely reminders for all your grocery items."
        android:textColor="#61677D"
        android:textSize="16sp"
        android:lineSpacingExtra="6sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pagination Dots -->
    <LinearLayout
        android:id="@+id/pagination_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/button_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/dot_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_dot_active"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/dot_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_dot_inactive"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/dot_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_dot_inactive" />
    </LinearLayout>

    <!-- Next Button -->
    <TextView
        android:id="@+id/button_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:background="@drawable/bg_get_started_button"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
