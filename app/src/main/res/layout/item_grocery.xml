<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_grocery_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_200"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Status Indicator -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_indicator_shape" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/green_50"
            android:layout_marginEnd="8dp">
        <!-- Item Icon -->
        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_apple"
            android:scaleType="centerCrop"
            app:tint="@color/gray_600" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Item Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fresh Apples"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: Fruit"
                android:textSize="13sp"
                android:textColor="@color/gray_600" />

            <!-- Expiry Date -->
            <TextView
                android:id="@+id/tv_expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expires: Sep 25, 2025"
                android:textSize="13sp"
                android:textColor="@color/gray_600" />

        </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_quantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Qty: 2"
                   android:textSize="11sp"
                   android:layout_gravity="end"
                   android:textColor="@color/gray_600"
                   android:background="@drawable/bg_quantity_badge"
                   android:paddingHorizontal="6dp"
                   android:paddingVertical="2dp"
                   android:layout_marginBottom="5dp"/>
        <!-- Status Badge -->
        <TextView
            android:id="@+id/tv_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Fresh (5 days left)"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/status_badge_fresh"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
           </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>