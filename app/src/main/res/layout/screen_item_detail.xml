<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- Top bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/left_arrow"
                app:iconTint="@color/green_primary"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Details"
                android:fontFamily="@font/roboto_bold"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Hero Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="28dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:id="@+id/img_item_icon"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_apple"
                            app:tint="@color/green_primary" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fresh Apples"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="26sp"
                        android:textColor="@color/gray_900"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:paddingHorizontal="24dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/text_category_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fruits"
                            android:textColor="@color/green_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </RelativeLayout>

            <!-- Status Chip (moved here) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:layout_marginBottom="4dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/green_50">

                    <TextView
                        android:id="@+id/text_status_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fresh (5 days left)"
                        android:textColor="@color/green_primary"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Countdown Timer Section -->
            <LinearLayout
                android:id="@+id/countdown_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Until Expiry"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Days -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/text_countdown_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="44sp"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="36sp"
                        android:textColor="@color/green_primary"
                        android:layout_marginBottom="18dp" />

                    <!-- Hours -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/text_countdown_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="44sp"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="36sp"
                        android:textColor="@color/green_primary"
                        android:layout_marginBottom="18dp" />

                    <!-- Minutes -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/text_countdown_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="44sp"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Quick Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:weightSum="2"
                android:baselineAligned="false">

                <!-- Quantity Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingVertical="24dp"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:id="@+id/text_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="36sp"
                            android:textColor="@color/gray_900"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/green_50">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingVertical="24dp"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:id="@+id/text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fresh"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="36sp"
                            android:textColor="@color/green_primary"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Timeline Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timeline"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="17sp"
                        android:textColor="@color/gray_900"
                        android:layout_marginBottom="16dp" />

                    <!-- Purchase Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="14dp">

                            <View
                                android:id="@+id/timeline_purchase_dot"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle_icon_bg" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginTop="4dp">

                                <View
                                    android:id="@+id/timeline_line"
                                    android:layout_width="2dp"
                                    android:layout_height="36dp"
                                    android:background="@color/gray_400" />

                                <View
                                    android:id="@+id/timeline_progress"
                                    android:layout_width="2dp"
                                    android:layout_height="0dp"
                                    android:layout_gravity="top"
                                    android:background="@color/green_500" />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_purchase_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Purchased"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="15sp"
                                android:textColor="@color/gray_900"
                                android:layout_marginBottom="3dp" />

                            <TextView
                                android:id="@+id/text_purchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sep 18, 2025"
                                android:fontFamily="@font/roboto"
                                android:textSize="13sp"
                                android:textColor="@color/gray_600" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Expiry Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="14dp">

                            <View
                                android:id="@+id/timeline_expiry_dot"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle_outline_bg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_expiry_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expires"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="15sp"
                                android:textColor="@color/gray_900"
                                android:layout_marginBottom="3dp" />

                            <TextView
                                android:id="@+id/text_expiry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sep 25, 2025"
                                android:fontFamily="@font/roboto"
                                android:textSize="13sp"
                                android:textColor="@color/gray_600" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Edit Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/green_primary"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_edit"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Item"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/green_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mark as Used Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_mark_used"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/green_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mark as Used"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Delete Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/red_500"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_delete"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete Item"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_loading_dialog"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/green_primary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing..."
                android:fontFamily="@font/roboto"
                android:textColor="@color/gray_800"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>