<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tabs text style (Material3) -->
    <style name="TabTextStyle" parent="TextAppearance.Material3.TitleSmall">
        <!-- Slightly larger, bold, not all caps -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <!-- Color if you want a specific one; otherwise rely on TabLayout defaults -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Custom Alert Dialog Style (Material3 overlay) -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Dialog container background (rounded card) -->
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialog.BodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomAlertDialog.TitleText</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Corner.Medium</item>

        <!-- Surfaces and colors -->
        <item name="colorSurface">@color/card_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Optional: custom background drawable for extra control -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="CustomAlertDialog.TitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialog.BodyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <!-- Grid Square Style -->
    <style name="GridSquare">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/bg_grid_square</item>
    </style>

    <!-- Bottom navigation tab container -->
    <style name="BottomNavTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Bottom navigation icon -->
    <style name="BottomNavIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <!-- Optional tint; comment if you tint per state -->
        <!-- <item name="android:tint">@color/text_secondary</item> -->
    </style>

    <!-- Bottom navigation text -->
    <style name="BottomNavTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Rounded medium corner overlay used by dialogs/buttons -->
    <style name="Shape.Corner.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <!-- Bottom Navigation Indicator Style -->
    <style name="BottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green_100</item>
    </style>


</resources>