<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Custom Alert Dialog Style -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Dialog background color -->
        <item name="android:background">@drawable/dialog_background</item>
        <item name="backgroundTint">@color/white</item>

        <!-- Title text color -->
        <item name="android:textColorPrimary">@color/green_primary</item>

        <!-- Message and item text color -->
        <item name="android:textColor">@color/gray_800</item>

        <!-- Button colors -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Checkbox colors -->
        <item name="colorControlActivated">@color/green_primary</item>
        <item name="colorControlNormal">@color/gray_400</item>

    </style>

    <!-- Grid Square Style -->
    <style name="GridSquare">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/bg_grid_square</item>
    </style>

    <style name="BottomNavTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <!-- Use the standard selectable background for ripple effect -->
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Style for the Icons (ImageView) -->
    <style name="BottomNavIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- Style for the Text Labels (TextView) -->
    <style name="BottomNavTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>