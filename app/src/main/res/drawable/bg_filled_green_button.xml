<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/pressed_green" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/hover_green" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/action_green"
                android:endColor="@color/hover_green"
                android:angle="0" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</selector>