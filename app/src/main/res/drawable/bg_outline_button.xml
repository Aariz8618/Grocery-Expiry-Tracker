<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/tertiary_bg" />
            <stroke android:width="2dp" android:color="@color/border_focus" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/card_surface" />
            <stroke android:width="1.5dp" android:color="@color/border_medium" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>